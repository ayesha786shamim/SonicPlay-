<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Divider Style -->
    <style name="Divider">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item> // You can change thickness here.
    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Themes Selection-->
    <style name="AppTheme.MorningDew" parent="@style/AppTheme">
        <item name="android:windowBackground">@drawable/splashscreen</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="customWindowBackground">@color/Pearl_Blue</item>
        <item name="android:textColor">#B4BCBC </item>
    </style>

