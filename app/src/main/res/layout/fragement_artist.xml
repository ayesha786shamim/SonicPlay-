<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#442A47">

    <include
        android:id="@+id/navigation_bar"
        layout="@layout/navigation_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/artists_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Artists"
        android:textColor="#FFFFFF"
        android:textSize="23sp"
        android:padding="10dp"
        android:layout_marginStart="250dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/artists_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/artists_title"
        android:layout_marginStart="80dp"
        android:padding="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/songs_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/artists_recycler_view"
        android:layout_marginStart="8dp"
        android:padding="8dp" />
</RelativeLayout>
