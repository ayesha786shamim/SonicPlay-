<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/customWindowBackground">

    <include
        android:id="@+id/navigation_bar"
        layout="@layout/navigation_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/artists_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Artists"
        android:textColor="?attr/android:textColor"
        android:textSize="23sp"
        android:padding="10dp"
        android:layout_marginStart="250dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/artists_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/artists_title"
        android:layout_marginStart="80dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/songs_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/artists_title"
        android:layout_marginStart="80dp" />

    <!-- Include the mini player layout -->
    <include
        android:id="@+id/mini_player"
        layout="@layout/mini_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
